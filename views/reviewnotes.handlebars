<h2>Review received notes</h2>
<div class="jumbotron">
	{{#each notes}}
		<p>Author : {{this.author.name}}</p>		
		<p>Subject : {{this.subject}}</p>
		<p>Purpose : {{this.purpose}}</p>
		<p>Budget : {{this.budget}}</p>
		<form method="post" action="/users/profile/review">
		<div class="form-group">
    <input type="hidden" class="form-control" name="noteid" value="{{this._id}}">
  </div>
   	<div class="form-group">
    <label>Comments</label>
    <input type="text" class="form-control" placeholder="comments" name="comment">
  </div>
  <div class="form-group">
    <label>Reviewer email</label>
    <input type="text" class="form-control" placeholder="Reviewer-1-email" name="reviewer1">
  </div>
  <div class="form-group">
    <label>Approval..yes or no?</label>
    <input type="text" class="form-control" placeholder="Yes or no" name="approve">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
		<hr>
	{{/each}}
</div>
