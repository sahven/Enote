<h2>Create a new enote</h2>

{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}

<form method="post" action="/users/profile/create">
   <div class="form-group">
    <label>Subject</label>
    <input type="text" class="form-control" placeholder="Subject" name="subject">
  </div>
  <div class="form-group">
    <label>Purpose</label>
    <input type="text" class="form-control" placeholder="Purpose" name="purpose">
  </div>
   <div class="form-group">
    <label>Details</label>
    <input type="text" class="form-control" placeholder="Details" name="details">
  </div>
  <div class="form-group">
    <label>Budget</label>
    <input type="text" class="form-control" placeholder="Budget" name="budget">
  </div>
   <div class="form-group">
    <label>Reviewer email</label>
    <input type="text" class="form-control" placeholder="Reviewer-email" name="reviewer1">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
